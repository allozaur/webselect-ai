{
  "manifest_version": 3,
  "name": "WebSelect",
  "version": "0.0.1",
  "description": "Select anything on website and instantly chat with AI",
  "icons": {
    "16": "png/icons/icon16.png",
    "48": "png/icons/icon48.png",
    "128": "png/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_icon": {
      "16": "png/icons/icon16.png",
      "48": "png/icons/icon48.png",
      "128": "png/icons/icon128.png"
    },
    "default_popup": "index.html",
    "default_title": "WebSelect"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}